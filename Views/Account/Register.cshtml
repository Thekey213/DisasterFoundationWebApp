@model DisasterFoundationWebApp.Models.ViewModel.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<h2>Register</h2>

<section>
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form asp-controller="Account" asp-action="Register" method="post">
                                    @Html.AntiForgeryToken()

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                        <span class="h1 fw-bold mb-0">Disaster Foundation</span>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">
                                        Register an account
                                    </h5>

                                    <!-- Email Input -->
                                    <div class="form-outline mb-4">
                                        <input asp-for="Email" class="form-control form-control-lg" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <!-- Password Input -->
                                    <div class="form-outline mb-4">
                                        <input asp-for="Password" type="password" class="form-control form-control-lg" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <!-- Confirm Password Input -->
                                    <div class="form-outline mb-4">
                                        <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-purple btn-lg btn-block" type="submit">Register</button>
                                    </div>

                                    <p class="mb-1 pb-lg-2" style="color:#800080b9;">
                                        Already have an account? <a href="@Url.Action("Login", "Account")"
                                            style="color:#800080b9;">Login here</a>
                                    </p>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


